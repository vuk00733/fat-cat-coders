{
    "compilerOptions": {
        "jsx": "react",
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["./components/*"],
            "@hooks/*": ["./hooks/*"],
            "@schemas/*": ["./schemas/*"],
            "@type/*": ["./type/*"],
            "@api/*": ["./api/*"]
        },
        "moduleResolution": "node"
    },
    "include": ["src"]
}
